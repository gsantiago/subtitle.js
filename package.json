{
  "name": "subtitle",
  "version": "1.0.0",
  "description": "Parse and manipulate SRT (SubRip)",
  "repository": {
    "type": "git",
    "url": "https://github.com/gsantiago/subtitle.js"
  },
  "main": "subtitle.js",
  "browser": "./browser/subtitle.browser.js",
  "scripts": {
    "test": "npm run lint && npm run ava",
    "ava": "ava test/*.test.js",
    "lint": "standard subtitle.js lib/*.js test/*.test.js",
    "coverage": "nyc npm test",
    "report": "nyc report --reporter=html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "browserify": "browserify subtitle.js -s Subtitle -o browser/subtitle.browser.js",
    "uglify": "uglifyjs browser/subtitle.browser.js -c -o browser/subtitle.browser.min.js",
    "build": "npm run browserify && npm run uglify"
  },
  "keywords": [
    "subtitle",
    "webvtt",
    "srt",
    "captions",
    "subrip",
    "parser",
    "stringify"
  ],
  "engines": {
    "node": ">= 6"
  },
  "author": "Guilherme Santiago",
  "license": "MIT",
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-eslint": "^7.2.3",
    "browserify": "^13.1.0",
    "coveralls": "^2.11.15",
    "fs-promise": "^1.0.0",
    "glob-contents": "0.0.3",
    "nyc": "^10.0.0",
    "pify": "^3.0.0",
    "standard": "^8.0.0",
    "uglify-js": "^2.7.3"
  },
  "dependencies": {
    "zero-fill": "^2.2.3"
  }
}
